<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: linear-gradient(120deg, #790cff 0%, #4e0de4 100%);
        color: #f8f9fa;
      }
      
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #a477f2;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      
      .form-control {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #0f83f6;
      }

      .form-label {
        font-weight: bold;
        color: #343a40;
      }
      
      .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
      }
      
      .btn-primary:hover {
        background-color: #0056b3;
      }
      
      h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #ffffff;
        text-align: center;
        margin-bottom: 20px;
      }

      textarea {
        resize: vertical;
      }
      
      .error-message {
        color: #dc3545; /* Red color for error messages */
        font-size: 0.875rem;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-3">
      <form  action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="coverImage" class="form-label">Cover Image</label>
            <input
              type="file"
              class="form-control"
              id="coverImage"
              name="coverImage"
              aria-describedby="coverImage"
            />
          </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            aria-describedby="title"
          />
        </div>
        <div class="mb-3">
            <label for="body">Body</label>
            <textarea name="body" class="form-control" id="body"></textarea>
          </div>
          <div class="mb-3">
            <button class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
  
      </form>
    </div>
    <%- include("./partials/script.ejs") %>
  </body>
</html>
