<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <style>
      /* Background gradient for the entire page */
      body {
        background: linear-gradient(120deg, #790cff 0%, #4e0de4 100%);
        font-family: "Arial", sans-serif;
        color: #ffffff;
        margin: 0;
        padding: 0;
      }

      /* Container for the blog cards */
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
      }

      /* Individual blog card styling */
      .card {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        width: 18rem;
        text-align: center;
      }

      .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      }

      /* Image styling for the blog cards */
      .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
      }

      /* Card body text and title */
      .card-body {
        padding: 15px;
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #ffdd57; /* Bright yellow color */
        margin-bottom: 10px;
      }

      .card-title:hover {
        text-decoration: underline;
        color: #fff; /* White on hover */
      }
      /* Button styling */
      .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>

    <title>Akashbani</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container mt-3">
      <% blogs.forEach(blog => { %>
      <div class="<%= blog.coverImage %>" style="width: 18rem">
        <img
          src="/<%= blog.coverImage %>"
          class="card-img-top"
          alt="Cover image for <%= blog.title %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>

          <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
        </div>
      </div>
      <% }) %>
    </div>

    <%- include("./partials/script.ejs") %>
  </body>
</html>
